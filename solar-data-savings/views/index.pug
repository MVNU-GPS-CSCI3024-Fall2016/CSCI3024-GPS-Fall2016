extends layout

block content
  div(class='container-fluid')
    div(class='col-sm-12 margin-bottom-20')
      h1= title
    div(class='col-md-6 col-sm-12')
      div(class='form-group col-sm-12')
        unless locations == null
        div(class='col-sm-7 margin-bottom-20')
          label(for='locations') Select a Location
          select(id='locations' class='form-control' name='locations')
            each location in locations
              option(value=locationID) #{location.getLocationName()}
      div(class='form-group col-sm-12')
        div(class='col-sm-4')
          b Process data by: 
        div(class='col-sm-8 margin-bottom-20 pad-left-0')
          label(for='date' class='radio-inline')
            input(type='radio' name='dateTime' value='date' checked='true')
            | Date
          label(for='dateTime' class='radio-inline')
            input(type='radio' name='dateTime' value='datetime')
            | Date & Time
      div(class='form-group')
        div(class='col-sm-12 margin-bottom-20')
          div(class='col-sm-6')
            label(for='startDate') Start Date
            div(class='input-group date')
              input(type='text' class='form-control datepicker' name='startDate' placeholder='mm/dd/yyyy')
              span(class='input-group-addon')
                i(class='glyphicon glyphicon-th')
      div(class='form-group')
        div(class='col-sm-12 margin-bottom-20')
          div(class='col-sm-6')
            label(for='endDate') End Date
            div(class='input-group date')
              input(type='text' class='form-control datepicker' name='endDate' placeholder='mm/dd/yyyy')
              span(class='input-group-addon')
                i(class='glyphicon glyphicon-th')
      script.
        var date = new Date();
        date = (date.getMonth()+1) + '/' + date.getDate() + '/' + date.getFullYear();
        $('.datepicker').each(function() {
          $(this).datepicker({
            autoclose: true,
            todayHighlight: true,
            endDate: date
          });
        });
      div(class='form-group')
        div(class='col-sm-12 margin-bottom-20')
          div(class='col-sm-5')
            label(for='kwhCost') Enter kWh Cost
            div(class='input-group')
              span(class='input-group-addon') $
              input(type='number' min=0 class='form-control' name='kwhCost')
      div(class='form-group')
        div(class='col-sm-12')
          div(class='col-sm-4')
            button(class='btn btn-default' onClick='getAnswersHourlySavings()') Submit
    div(class='col-sm-6')
      block content